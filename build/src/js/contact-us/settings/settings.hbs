<h2>Settings</h2>
<form>
  <div class="grid-container">
    <div class="grid-x grid-padding-x">
    <div class="medium-6 cell">
      <label>Public Key
        <input type="text" class="form-control" id="public_key" name="captcha_public_key" aria-describedby="public_keyHelp" placeholder="Public Key" value="{{captcha_public_key}}">
      </label>
      <p id="public_keyHelp" class="help-text">Captcha Public Key</p>
    </div>
    <div class="medium-6 cell">
      <label>Private Key
        <input type="text" class="form-control" id="private_key" name="captcha_private_key" aria-describedby="private_keyHelp" placeholder="Private Key" value="{{captcha_private_key}}">
        <p id="private_keyHelp" class="help-text">Captcha Private Key</p>
      </label>
    </div>
  </div>
    <div class="grid-x grid-padding-x">
      <div class="medium-6 cell">
        <label>Captcha Url
          <input type="text" class="form-control" id="captcha_url" name="captcha_url" aria-describedby="captcha_urlHelp" placeholder="Captcha Url" value="{{captcha_url}}">

        </label>
        <p id="captcha_urlHelp" class="help-text">Captcha Url</p>
      </div>
    </div>
    <div class="grid-x grid-padding-x">
      <div class="medium-6 cell">
        <input type="checkbox" id="captcha_enabled" name="captcha_enabled" aria-describedby="captcha_enableHelp" {{#if captcha_enabled}}checked{{/if}}>
        <label for="captcha_enabled">Captcha Enabled</label>
        <p id="captcha_enableHelp" class="help-text">Enable Captcha</p>
      </div>
    </div>
    <div class="grid-x grid-padding-x">
      <div class="medium-8 cell">
        <button type="submit" class="settings success button">Submit</button>
      </div>
    </div>
  </div>
</form>
